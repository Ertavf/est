            @Html.ValidationMessageFor(model => model.GirisTarihi)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#PartiKodu').on('keyup', function (e) {
            return $('#PartiKodu').val(($("#PartiKodu").val()).toUpperCase());
        });
    </script>
}
