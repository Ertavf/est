<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - ESTAS</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("ESTAŞ", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Sanayi", "Index", "Sanayi", new { id=""},null)</li>
                            <li>@Html.ActionLink("Mil", "Index", "Mil", new { id= ""}, null)</li>
                            <li>@Html.ActionLink("Parti", "Index", "Parti", new { id= ""},null)</li>
                            <li>@Html.ActionLink("Personel", "Index", "Personel", new { id= ""},null)</li>
                            <li>@Html.ActionLink("Hata", "Index", "Hata", new { id=""},null)</li>
                            <li>@Html.ActionLink("EstasKoduTipi", "Index", "EstasKoduTipi", new { id=""},null)</li>
                            <li>@Html.ActionLink("MilTipi", "Index", "Miltipi", new { id=""},null)</li>
                            <li>@Html.ActionLink("Firma", "Index", "Firma", new { id=""},null)</li>
                            <li>@Html.ActionLink("Tezgah", "Index", "Tezgah", new { id=""},null)</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        <script src="~/Scripts/jquery.searchabledropdown-1.0.7.src.js" type ="text/javascript"></script>
        <script src="~/Scripts/jquery.paginate.js"></script>
        <script >
            $(document).ready(function () { 
                $("select").searchable({
                    maxListSize: 100,						// if list size are less than maxListSize, show them all
                    maxMultiMatch: 50,						// how many matching entries should be displayed
                    exactMatch: false,						// Exact matching on search
                    wildcards: true,						// Support for wildcard characters (*, ?)
                    ignoreCase: true,						// Ignore case sensitivity
                    latency: 200,							// how many millis to wait until starting search
                    warnMultiMatch: 'top {0} matches ...',	// string to append to a list of entries cut short by maxMultiMatch 
                    warnNoMatch: 'no matches ...',			// string to show in the list when no entries match
                    zIndex: 'auto'							// zIndex for elements generated by this plugin
                });
                setTimeout(function () {
                    var bas =   parseInt($("input[name='bas']").val());
                    var getir = parseInt($("input[name='getir']").val());
                    var toplam = parseInt($("input[name='toplam']").val());

                    $("#sayfalar").paginate({
                        count: Math.ceil(toplam/getir),
                        start: Math.floor(bas / getir) + 1,
                        display: Math.ceil(toplam / getir) > 10 ? 10 : Math.ceil(toplam / getir),
                        border: false,
                        text_color: '#79B5E3',
                        background_color: 'none',
                        text_hover_color: '#2573AF',
                        background_hover_color: 'none',
                        images: false,
                        mouse: 'press',
                        onChange: function (page) {
                            bas = Math.floor( getir *  (parseInt(page) - 1));
                            $("input[name='bas']").val(bas);
                            $('#p' + page).addClass('_current').show();
                            $("form#sayfa").submit();
                        }
                    });
                }, 100);
                
            });

        </script>
        @RenderSection("scripts", required: false)
        <link href="~/Content/JPaginate.css" rel="stylesheet" />
    </body>
</html>
